<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_round"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:paddingBottom="5dp"
            android:paddingLeft="25dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:src="@mipmap/back_gray" />

        <TextView
            android:id="@+id/pick_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="12dp"
            android:text="@string/profile_recharge_pass"
            android:textColor="@color/black"
            android:textSize="@dimen/h1" />

    </RelativeLayout>

    <View style="@style/divider" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/gray_border_round"
        android:gravity="center"
        android:hint="@string/profile_recharge_pass_input"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textScaleX="1.1"
        android:textSize="@dimen/h1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="20dp"
        android:text="@string/find_password"
        android:textColor="@color/colorAccent" />

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_bg"
        android:enabled="false"
        android:text="@string/recharge_payment1"
        android:textColor="@color/white"
        android:textSize="@dimen/h1" />
</LinearLayout>